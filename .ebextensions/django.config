container_commands:
  00_django_install:
    command: "yum update -y && yum install -y python-devel postgresql-devel && amazon-linux-extras enable postgresql14 -y"
  01_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python /var/app/current/manage.py collectstatic --noinput"
    leader_only: true
  02_install:
    command: "source /var/app/venv/*/bin/activate && pip install psycopg2"


option_settings:
  aws:elasticbeanstalk:container:python:staticfiles:
    "/static/": "www/static/"
  aws:elasticbeanstalk:container:python:
    WSGIPath: KrchChat.wsgi:application